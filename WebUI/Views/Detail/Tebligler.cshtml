@using WebApplication1.Models
@using WebUI.Models
@using WebUI.Models.Api
@model PageItem

<section class="single-post-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                @await Component.InvokeAsync("MenuCategory",new {MenuID=2087})
                <!-- breadcump end-->
                <div class="jumbotron-fluid ts-grid-box">
                    <h5 class="display-5">@Model.Tebligler.Data.Baslik</h5>
                    <div class="container">
                        <div class="entry-header">
                            <a href="#" class="post-cat bg-danger">Mevzuat Duyuruları</a>
                            <ul class="post-meta-info float-right">

                                <li>
                                    <i class="fa fa-clock-o"></i>
                                    @Model.Tebligler.Data.EklemeTarihi.ToString("f")
                                </li>
                                <li class="active">
                                    <i class="fa fa-eye"></i>
                                    @Model.Tebligler.Data.GosterimSayisi
                                </li>
                                @if(@Model.Tebligler.Data.DosyaUrl!="0"){
                                <li class="active">                                    
                                    <a href="/Content/@Model.Tebligler.Data.DosyaUrl" target="_blank">Ek : <i class="fa fa-file fa-2x"></i></a>
                                </li>
                                }
                            </ul>
                        </div>
                        <!-- single post header end-->
                        <div class="post-content-area">

                            <div class="entry">
                                <p class="lead">@Html.Raw(Model.Tebligler.Data.Metin)</p>
          
                            </div>
                            <!-- entry content end-->
                        </div>
                        <!-- post content area-->
                        <!-- post navigation end-->

                    </div>

                    @await Component.InvokeAsync("TumTebligler")
                </div>

                @*                     <div class="entry-header">
                    <h2 class="  lg">Tüm Haberler</h2>
                    </div>
                    @await Component.InvokeAsync("TumHaberler")*@


            </div>
            <!-- col end -->
            <div class="col-lg-3">
                <!--RIGHT SIDE BAR-->
                @await Component.InvokeAsync("RightSideBar", new {YazilarGrup=1,UstID=42,SayfaID=2087})

                <!--RIGHT SIDE BAR-->
            </div>
            <!-- right sidebar end-->
            <!-- col end-->
        </div>
        <!-- row end-->
    </div>
    <!-- container-->
</section>

